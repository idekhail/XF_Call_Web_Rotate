<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App19.FirstPage">

    <StackLayout>
        <Frame BackgroundColor="Black" Padding="24" CornerRadius="0">
            <Label Text="First Page" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <StackLayout >
            <Entry Placeholder="Username" x:Name="Username"  />
        </StackLayout>
        <StackLayout>
            <Button Text="Login" x:Name="Login" Clicked="Login_Clicked" HorizontalOptions="Center"/>
            <Button Text="Clode" x:Name="Close" HorizontalOptions="Center" />
        </StackLayout>
    </StackLayout>
</ContentPage>
