<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App19.ScreenPage">
    <StackLayout>
        <Frame BackgroundColor="Black" Padding="24" CornerRadius="0">
            <Label Text="Screen Page" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <StackLayout >
            <Label Text="Your Name" x:Name="YourName"  />
        </StackLayout>
        <StackLayout>
            <Button Text="Logout" x:Name="Logout"  HorizontalOptions="Center"/>
            <Button Text="Clode" x:Name="Close" HorizontalOptions="Center" />
        </StackLayout>
    </StackLayout>
</ContentPage>